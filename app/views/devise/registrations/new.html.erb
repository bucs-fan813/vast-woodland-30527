<div layout="column" layout-align="space-around center" class="md-inline-form">
<md-content layout-padding>
    <div>
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
         <md-input-container class="md-block">
            <label><%= f.label :fullname %></label>
    <%= f.text_field :fullname, autofocus: true, :placeholder => "Full Name" %>
    </md-input-container>
        <md-input-container class="md-block">
            <label><%= f.label :email %></label>
    <%= f.email_field :email, :placeholder => "Email" %>
    </md-input-container>

        <md-input-container class="md-block">
    <% if @validate %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
                    <label><%= f.label :password %></label>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
  </md-input-container>

  <div class="actions">
    <md-button class="btn md-raised md-accent" type="submit">Sign up</md-button>
  </div>
<% end %>
</div>
</md-content>
</div>
